# Enforce LF for all text by default
*			text=auto eol=lf

# Force LF line endings for specific file types
# Common scripts
*.sh		text eol=lf
*.py		text eol=lf
*.js		text eol=lf
*.vue		text eol=lf
*.json		text eol=lf
*.md		text eol=lf
*.yml		text eol=lf
*.yaml		text eol=lf
*.sql		text eol=lf
*.css		text eol=lf
*.html		text eol=lf
*.mjs		text eol=lf
*.cjs		text eol=lf
*.tsx		text eol=lf
*.jsx		text eol=lf
*.cpp		text eol=lf
*.ts		text eol=lf

*.svg		text eol=lf
*.xml		text eol=lf
*.txt		text eol=lf
*.csv		text eol=lf

# Windows-only script files that typically expect CRLF
*.bat		text eol=crlf
*.cmd		text eol=crlf

# Binary (never touch line endings)
# Disable line ending conversion for binary files
*.png		binary
*.jpg		binary
*.jpeg		binary
*.gif		binary
*.webp		binary
*.pdf		binary

*.pt		binary
*.pth		binary
*.pkl		binary
*.npz		binary
*.npy		binary

*.node		binary
*.db		binary
*.mod		binary

*.dll		binary
*.lib		binary
*.exe		binary
*.so		binary
*.dylib		binary
*.zip		binary
*.tar		binary
*.gz		binary
*.7z		binary
